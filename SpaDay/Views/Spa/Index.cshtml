<form method='post'>

    Name:
    <br>
    <input type='text' name='name'>
    <br>

    Skin type:
    <br>
    <select name='skintype'>
        <option value='oily'>Oily</option>
        <option value='combination'>Combination</option>
        <option value='normal'>Normal</option>
        <option value='dry'>Dry</option>
    </select>
    <br>

    Manicure and/or Pedicure?
    <br>
    <input type="checkbox" id="manicure" name="manicure" value="true">
    <label for="manicure"> Manicure </label>
    <input type="checkbox" id="pedicure" name="pedicure" value="true">
    <label for="pedicure"> Pedicure </label>
